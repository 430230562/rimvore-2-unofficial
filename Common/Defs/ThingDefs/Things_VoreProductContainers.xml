<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Abstract="True" Name ="RV2_Container_Base">
    <label>Unopened remains</label>
    <category>Item</category>
    <thingClass>RimVore2.VoreProductContainer</thingClass>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.50</fillPercent>
    <description>The final result of a living being that has been digested. \nThis can be opened to retrieve undigested items.</description>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <tickerType>Rare</tickerType>
    <pathCost>30</pathCost>
    <designateHaulable>true</designateHaulable>
    <soundInteract></soundInteract>
    <tradeability>Sellable</tradeability>
    <generateCommonality>0</generateCommonality>
    <soundDrop></soundDrop>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>10</Mass>
      <Flammability>0.75</Flammability>
      <DeteriorationRate>20</DeteriorationRate>
    </statBases>
    <stackLimit>1</stackLimit>
    <thingCategories>
      <!-- prevents storing with other "normal" items for storage mods -->
      <li>RV2_VoreProductContainer</li>
    </thingCategories>
    <comps>
      <li Class="RimVore2.ThingCompProperties_DeadPreyInformation"/>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <modExtensions>
      <li Class="RimVore2.VoreContainerExtension">
        <isBones>false</isBones>
        <isScat>false</isScat>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="RV2_Container_Base">
    <defName>RV2_Container_Sack</defName>
    <description Inherit ="False">A digested pawn's remains, neatly bundled in a sack, to retrieve any undigested items later.</description>
    <label>Sack</label>
    <graphicData>
      <texPath>Things/VoreResultContainers/Base</texPath>
    </graphicData>
  </ThingDef>
  
  <ThingDef ParentName="RV2_Container_Base">
    <defName>RV2_Container_Bones</defName>
    <description Inherit ="False">A pile of bones which used to be a pawn. You can dig around in it to retrieve undigested items.</description>
    <label>Bones</label>
    <graphicData>
      <texPath>Things/VoreResultContainers/Bones</texPath>
    </graphicData>
    <modExtensions Inherit="False">
      <li Class="RimVore2.VoreContainerExtension">
        <forcedProducedThings>
          <li>RV2_Resource_Bones</li>
        </forcedProducedThings>
        <isBones>true</isBones>
        <isScat>false</isScat>
		<!--<isPiss>false</isPiss>-->
      </li>
    </modExtensions>
  </ThingDef>
  
