<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <RimVore2.VoreMentalStateDef Abstract="True" Name="RV2_BaseMentalState" ParentName="BaseMentalState">
    <stateClass>RimVore2.MentalState_VoreTargeter</stateClass>
    <workerClass>RimVore2.MentalStateWorker_VoreTargetsAvailable</workerClass>
    <category>Misc</category>
    <colonistsOnly>true</colonistsOnly>
    <moodRecoveryThought>Catharsis</moodRecoveryThought>
    <blockNormalThoughts>true</blockNormalThoughts>
    <nameColor>(0.65, 0.9, 0.93)</nameColor>
    <minTicksBeforeRecovery>3500</minTicksBeforeRecovery>
    <recoveryMtbDays>0.2</recoveryMtbDays>
    <beginLetterDef>NegativeEvent</beginLetterDef>
  </RimVore2.VoreMentalStateDef>
  
  <RimVore2.VoreMentalStateDef Abstract="True" Name="RV2_BaseMentalState_Prey" ParentName="RV2_BaseMentalState">
    <initiatorRole>Prey</initiatorRole>
    <targetChangeMessageKey>RV2_Message_AsPreyTargetChange</targetChangeMessageKey>
    <modExtensions>
      <li Class="RimVore2.Extension_ValidMentalStateForVore">
        <forPrey>true</forPrey>
      </li>
    </modExtensions>
  </RimVore2.VoreMentalStateDef>
  <RimVore2.VoreMentalStateDef Abstract="True" Name="RV2_BaseMentalState_Predator" ParentName="RV2_BaseMentalState">
    <initiatorRole>Predator</initiatorRole>
    <targetChangeMessageKey>RV2_Message_AsPredatorTargetChange</targetChangeMessageKey>
    <modExtensions>
      <li Class="RimVore2.Extension_ValidMentalStateForVore">
        <forPredator>true</forPredator>
      </li>
    </modExtensions>
  </RimVore2.VoreMentalStateDef>
  
  <!-- prey mental breaks -->
  <MentalBreakDef>
    <defName>RV2_GurgleSeeker</defName>
    <mentalState>RV2_GurgleSeeker</mentalState>
    <baseCommonality>1</baseCommonality>
    <intensity>Extreme</intensity>
  </MentalBreakDef>
  <RimVore2.VoreMentalStateDef ParentName="RV2_BaseMentalState_Prey">
    <defName>RV2_GurgleSeeker</defName>
    <label>Gurgle Seeker</label>
    <recoveryMessage>{0} has changed their mind about being digested.</recoveryMessage>
    <beginLetterLabel>Gurgle Seeker</beginLetterLabel>
    <beginLetter>{0} has given up and decided to get vored by {1}!</beginLetter>
    <baseInspectLine>Mental state: Gurgle Seeker</baseInspectLine>
    <minTicksBeforeRecovery>99999999</minTicksBeforeRecovery>
    <request>
      <canDoFatalVore>true</canDoFatalVore>
    </request>
    <fallbackMentalState>GiveUpExit</fallbackMentalState>
    <designationWhitelist>
      <li>fatal</li>
    </designationWhitelist>
  </RimVore2.VoreMentalStateDef>
  
  <MentalBreakDef>
    <defName>RV2_HideInPredator</defName>
