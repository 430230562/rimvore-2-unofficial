  </MentalBreakDef>
  <RimVore2.VoreMentalStateDef ParentName="RV2_BaseMentalState_Prey">
    <defName>RV2_HideInPredator</defName>
    <label>Hide In Predator</label>
    <recoveryMessage>{0} had a great time inside {1}. They will now stop trying to hide in them</recoveryMessage>
    <beginLetterLabel>Hide In Predator</beginLetterLabel>
    <beginLetter>{0} is going to get themselves vored by {1}!</beginLetter>
    <baseInspectLine>Mental state: Endo-Abductor</baseInspectLine>
    <request>
      <isColonist>true</isColonist>
      <canDoEndoVore>true</canDoEndoVore>
      <initiatorQuirks>
        <li>Enablers_Core_Goal_Longendo</li>
      </initiatorQuirks>
    </request>
    <fallbackMentalState>Wander_OwnRoom</fallbackMentalState>
    <goalWhitelist>
      <li>Store</li>
    </goalWhitelist>
  </RimVore2.VoreMentalStateDef>
  
